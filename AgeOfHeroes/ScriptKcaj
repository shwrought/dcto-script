local SpawnTab = Window:CreateTab("Spawn", "home")
SpawnTab:CreateSection("Spawn & Safety")

local Players = game:GetService("Players")
local RunService = game:GetService("RunService")
local LocalPlayer = Players.LocalPlayer

-- =====================
-- SPAWNPOINT (AUTO RESPAWN)
-- =====================
getgenv().SavedSpawnCFrame = nil
getgenv().AutoSpawnEnabled = true

-- Respawn automÃ¡tico
LocalPlayer.CharacterAdded:Connect(function(char)
    if getgenv().SavedSpawnCFrame and getgenv().AutoSpawnEnabled then
        local root = char:WaitForChild("HumanoidRootPart", 5)
        if root then
            task.wait(0.1)
            root.CFrame = getgenv().SavedSpawnCFrame
            root.AssemblyLinearVelocity = Vector3.zero
        end
    end
end)

SpawnTab:CreateButton({
    Name = "ðŸ“Œ Guardar Spawnpoint",
    Callback = function()
        local char = LocalPlayer.Character
        local root = char and char:FindFirstChild("HumanoidRootPart")

        if root then
            getgenv().SavedSpawnCFrame = root.CFrame
            Rayfield:Notify({
                Title = "Spawnpoint",
                Content = "Spawn guardado (respawn automÃ¡tico activado)",
                Duration = 3
            })
        end
    end
})


SpawnTab:CreateToggle({
    Name = " Auto Respawn al Spawn",
    CurrentValue = true,
    Callback = function(state)
        getgenv().AutoSpawnEnabled = state
    end
})


SpawnTab:CreateButton({
    Name = " Ir al Spawnpoint",
    Callback = function()
        if not getgenv().SavedSpawnCFrame then
            Rayfield:Notify({
                Title = "Spawnpoint",
                Content = "No hay spawn guardado",
                Duration = 3
            })
            return
        end

        local char = LocalPlayer.Character
        local root = char and char:FindFirstChild("HumanoidRootPart")

        if root then
            root.AssemblyLinearVelocity = Vector3.zero
            root.CFrame = getgenv().SavedSpawnCFrame
        end
    end
})

-- =====================
-- NOCLIP
-- =====================
getgenv().NoclipEnabled = false
local NoclipConnection

local function applyNoclip(char)
    for _, part in ipairs(char:GetDescendants()) do
        if part:IsA("BasePart") then
            part.CanCollide = false
        end
    end
end

SpawnTab:CreateToggle({
    Name = "ðŸš« Noclip",
    CurrentValue = false,
    Callback = function(state)
        getgenv().NoclipEnabled = state

        if state then
            if NoclipConnection then NoclipConnection:Disconnect() end
            NoclipConnection = RunService.Stepped:Connect(function()
                local char = LocalPlayer.Character
                if char then applyNoclip(char) end
            end)
            Rayfield:Notify({Title="Noclip", Content="Activado", Duration=2})
        else
            if NoclipConnection then
                NoclipConnection:Disconnect()
                NoclipConnection = nil
            end
            Rayfield:Notify({Title="Noclip", Content="Desactivado", Duration=2})
        end
    end
})

-- =====================
-- ANTIFLING
